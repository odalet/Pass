<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sopra.passport"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".PersonActivity"
            android:label="@string/activity_person_title" >
        </activity>
        <activity
            android:name=".PersonListActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".ImageActivity"
            android:label="@string/title_activity_image_viewer"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
        </activity>
        <activity
            android:name=".Show_galerry"
            android:label="@string/title_activity_show_galerry"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
        </activity>
        <activity
            android:name=".ShowGallery"
            android:label="@string/title_activity_show_gallery"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
        </activity>
        <activity
            android:name=".AdvancedSearch"
            android:label="@string/title_activity_advanced_search"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
        </activity>
        <activity
            android:name=".SplashScreen"
            android:label="@string/title_activity_splash_screen"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PersonCarte"
            android:label="@string/title_activity_person_carte"
            android:theme="@android:style/Theme.DeviceDefault.Dialog">
        </activity>
    </application>

</manifest>
